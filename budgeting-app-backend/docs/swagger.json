    "paths": {
        "/api/budget-items": {
            "get": {
                "description": "Retrieve all budget items from the database",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Budget Items"
                ],
                "summary": "Get all budget items",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
