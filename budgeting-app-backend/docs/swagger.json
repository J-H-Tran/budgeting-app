                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Budget Items"
                ],
                "summary": "Create a new budget item",
                "parameters": [
                    {
                        "description": "Budget Item",
                        "name": "item",
                        "in": "body",
                        "required": true,
