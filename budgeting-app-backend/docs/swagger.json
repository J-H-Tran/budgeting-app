        "/api/budget-items/{id}": {
            "get": {
                "description": "Retrieve a specific budget item by ID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Budget Items"
                ],
