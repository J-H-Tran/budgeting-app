                "description": "Delete a budget item from the database",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Budget Items"
                ],
                "summary": "Delete a budget item",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Budget Item ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
